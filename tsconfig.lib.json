{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "types": [
      "node"
    ],
    "paths": {}
  },
  "include": [
    "src/index.ts",
    "src/cli.ts",
    "src/server.ts",
    "src/types/*.ts",
    "src/interfaces/*.ts",
    "src/errors/*.ts",
    "src/capture/*.ts",
    "src/processing/*.ts",
    "src/privacy/*.ts",
    "src/security/*.ts",
    "src/storage/*.ts",
    "src/tools/*.ts"
  ],
  "references": [],
  "exclude": [
    "jest.config.ts",
    "jest.config.js",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e.spec.ts",
    "**/*.integration.spec.ts",
    "**/*.property.spec.ts"
  ]
}